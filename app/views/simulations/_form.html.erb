<%# Uses rails_bootstrap_form gem. API at: https://github.com/bootstrap-ruby/rails-bootstrap-forms %>

<% if false %>
  <%= bootstrap_form_for(simulation) do |f| %>
    <%= f.alert_message "Please fix the errors below." %>

    <%= f.text_field :status %>
    <%= f.text_area :job_cache %>

    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= f.button 'Reset', type: :reset, class: 'btn btn-default' %>

    <hr>

    <%= link_to 'Back', simulations_path, class: 'btn btn-default' %>
    <%= link_to 'Show', simulation, class: 'btn btn-primary' unless simulation.new_record? %>
  <% end %>
<% end %>

<div class="row" id="vue-app">
  <!-- Control Panel -->
  <div class="col-md-3 box">
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" data-target="#collapse-start">
          <h4 class="panel-title">Start</h4>
        </div>
        <div id="collapse-start" class="panel-collapse collapse in">
          <div class="panel-body">
            <div class="form-group">
              <label for="username">User Name:</label>
              <input v-model="start_panel_data.user_name" class="form-control" id="username" disabled/>
            </div>
            <div class="form-group">
              <label for="eweld_job_description">Description:</label>
              <input v-model="start_panel_data.job_description" class="form-control" id="eweld_job_description" placeholder="Provide Job Description"
                     maxlength="50" />
            </div>
            <div class="form-group">
              <label for="walltime_requested">Walltime (1 to 10 hours):</label>
              <input class="form-control" id="walltime_requested" type="number" value="1" min="1" max="10" />
            </div>
            <div class="form-group">
              <label for="weld-technique">Weld Technique:</label>
              <select class="form-control" id="weld-technique">
                <option>GMAW</option>
                <option>LBW</option>
                <option>HLAW</option>
                <option>Pulsed GMAW</option>
                <option>Weaved Pulsed GMAW</option>
                <option>GTAW</option>
                <option>SAW</option>
                <option>SMAW</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" data-target="#collapse-dimensions">
          <h4 class="panel-title">Fixture Shape</h4>
        </div>
        <div id="collapse-dimensions" class="panel-collapse collapse">
          <div class="panel-body">
            <div class="form-group">
              <label for="fixture-shape">Fixture Shape:</label>
              <select v-model="dimension_data.selected" class="form-control" id="fixture-shape">
                <option v-for="fixture_shape in dimension_data.fixture_shapes" v-bind:value="fixture_shape.value">
                  {{ fixture_shape.title }}
                </option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" data-target="#collapse-geometry">
          <h4 class="panel-title">Weld Geometry</h4>
        </div>
        <div id="collapse-geometry" class="panel-collapse collapse">
          <div class="panel-body">
            <div class="form-group">
              <label for="joint-design">Joint Design:</label>
              <select v-model="joint_data.selected" class="form-control" id="joint-design">
                <option v-for="joint_design in joint_data.joint_designs" v-bind:value="joint_design.value">
                  {{ joint_design.title }}
                </option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading"  data-toggle="collapse" data-parent="#accordion" data-target="#collapse-bead-definition">
          <h4 class="panel-title">Bead Definition</h4>
        </div>
        <div id="collapse-bead-definition" class="panel-collapse collapse">
          <div class="panel-body">
            <select class="form-control" id="bead-definition-select">
              <option>Parabolic</option>
              <option>Elliptical</option>
              <option>Custom</option>
            </select>
            <canvas id="bead_canvas_0"></canvas>
            <div class="col-md-12">
              <div class="form-group row">
                <label for="inputKey" class="col-md-2 control-label">A</label>
                <div class="col-md-4">
                  <input class="form-control" id="inputKey" placeholder="0.0">
                </div>
                <label for="inputValue" class="col-md-2 control-label">B</label>
                <div class="col-md-4">
                  <input class="form-control" id="inputValue" placeholder="0.1">
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group row">
                <label for="inputKey" class="col-md-2 control-label">C</label>
                <div class="col-md-4">
                  <input class="form-control" id="inputKey" placeholder="0.0">
                </div>
                <label for="inputValue" class="col-md-2 control-label">D</label>
                <div class="col-md-4">
                  <input class="form-control" id="inputValue" placeholder="-0.150">
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group row">
                <label for="inputKey" class="col-md-2 control-label">W</label>
                <div class="col-md-4">
                  <input class="form-control" id="inputKey" placeholder="0.3">
                </div>
                <label for="inputValue" class="col-md-2 control-label">R</label>
                <div class="col-md-4">
                  <input class="form-control" id="inputValue" placeholder="0.0">
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group row">
                <label for="inputKey" class="col-md-2 control-label">Z<sup>start</sup></label>
                <div class="col-md-4">
                  <input class="form-control" id="inputKey" placeholder="0.0">
                </div>
                <label for="inputValue" class="col-md-2 control-label">Z<sup>end</sup></label>
                <div class="col-md-4">
                  <input class="form-control" id="inputValue" placeholder="0.5">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" data-target="#collapse-materials">
          <h4 class="panel-title">Materials</h4>
        </div>
        <div id="collapse-materials" class="panel-collapse collapse">
          <div class="panel-body">
            <div class="form-group">
              <label for="weld-geometry">Part 1 - Base Metal:</label>
              <select class="form-control" id="weld-geometry">
                <option>A572</option>
                <option>AH36</option>
                <option>AISI-1018</option>
                <option>AISI-4140</option>
                <option>AISI-8620</option>
                <option>ASTM2.25Cr-1.0Mo</option>
                <option>...</option>
              </select>
            </div>
            <div class="form-group">
              <label for="weld-geometry">Part 2 - Base Metal:</label>
              <select class="form-control" id="weld-geometry">
                <option>A572</option>
                <option>AH36</option>
                <option>AISI-1018</option>
                <option>AISI-4140</option>
                <option>AISI-8620</option>
                <option>ASTM2.25Cr-1.0Mo</option>
                <option>...</option>
              </select>
            </div>
            <div class="form-group">
              <label for="weld-geometry">Filler Wire:</label>
              <select class="form-control" id="weld-geometry">
                <option>E91T1-B3L</option>
                <option>...</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading"  data-toggle="collapse" data-parent="#accordion" data-target="#collapse-procedure">
          <h4 class="panel-title">Weld Procedure</h4>
        </div>
        <div id="collapse-procedure" class="panel-collapse collapse">
          <div class="panel-body">
            TODO
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- Graphic Panel -->
  <div id="weld-render-view" class="col-md-9 box">

  </div>
</div>
<div>
  <button id="form-submit-button" class="btn btn-primary">Submit</button>
</div>

<script>

</script>
